@model CartViewModel
@{
    ViewBag.Title = "Cart";
}

<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav" style="height:650px;">
        </div>
        <div class="col-sm-8">
            <div class="row">
                <h2>Your Cart</h2>
                <br />
                <table align="center">
                    <tr>
                        <td><div class="alert-success"><strong>Name</strong></div></td>
                        <td><div class="alert-success"><strong>Count</strong></div></td>
                        <td><div class="alert-success"><strong>Price</strong><div></div></td>
                    </tr>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td style="padding:5px;"><div class="alert-info">@Html.Raw(item.ItemName)</div></td>
                            <td style="padding:5px;"><div class="alert-info"> @item.Count </div></td>
                            <td style="padding:5px;"><div class="alert-info">@item.Price</div></td>
                        </tr>
                    }
                </table>
            </div>

            <div class="row">
                <br/>
                <br/>
                <form asp-controller="Buy" asp-action="CheckOut" method="POST">
                    <input value="Check Out" type="submit">
                </form>
            </div>
        </div>
        <div class="col-sm-2 sidenav" style="height:650px;">

        </div>
    </div>
</div>
