@model GuestBookViewModel

@{
    ViewBag.Title = "GuestBook";
}

<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav" style="height:650px;">
        </div>
        <div class="col-sm-8">
            <div class="row">      
                <h2>Guestbook</h2>
                <h4>See what people are saying about us!</h4>
                <table align="center">
                    @foreach (var comment in Model.Comments)
                    {
                        <tr>
                            <td style="padding:5px;"><div class="alert-success"><strong>@comment.Comment</strong></div></td>
                            <td style="padding:5px;"><div class="alert-info"> - @Html.Raw(comment.Name) </div></td>
                        </tr>
                    }
                </table>
            </div>
                
            <div class="row">
                <form asp-controller="GuestBook" asp-action="Create" method="POST">
                    <label for="Name">Name:</label>
                    <br />
                    <input class="form-control" name="Name" id="Name" type="text" />
                    <br />
                    <label for="Comment">Comment:</label>
                    <br />
                    <textarea class="form-control" name="Comment" id="Comment"></textarea>
                    <br />
                    <input value="Submit" type="submit">
                </form>
            </div>
        </div>
        <div class="col-sm-2 sidenav" style="height:650px;">
                
        </div>
    </div>
</div>

