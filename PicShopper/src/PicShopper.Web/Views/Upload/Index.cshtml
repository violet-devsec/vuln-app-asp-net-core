@model UploadFile

@{
    ViewBag.Title = "Upload";
}
<h3>"Upload Your Pics"</h3>

    <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="Index">
            <div>
                <label asp-for="Title">Title :</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div>
                <label asp-for="Price">Price : </label>
                <input asp-for="Price" class="form-control" type="text" />
            </div>
            <br/>
            <div>
                <label asp-for="Content">File : </label>
                <input asp-for="Content" type="file"/>
            </div>
           <div>
            <input type="submit" value="Upload" class="btn"/>
        </div>
    </form>