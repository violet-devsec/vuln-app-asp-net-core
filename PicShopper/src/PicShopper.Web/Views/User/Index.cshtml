@model UserViewModel
@{
    ViewBag.Title = "User";
}


<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav" style="height:650px;">
        </div>
        <div class="col-sm-8">
            <div class="row">
                <h2>Hi, @User.Identity.Name</h2>
            </div>
            <div class="row">
                <img style="height:100px; width:150px;" src="~/images/profile-picture.png" />
            </div>
        </div>
        <div class="col-sm-2 sidenav" style="height:650px;">
            <div class="well">
                <form asp-controller="User" asp-action="Profile" method="get">
                    <input type="submit" value="Profile" disabled="disabled"/>
                </form>
            </div>
            <div class="well">
                <form asp-controller="Cart" asp-action="Index" asp-route-id="@Model.Id" method="get">
                    <input type="submit" value="Cart" />
                </form>
            </div>
            <div class="well">
                <form asp-controller="User" asp-action="ChangePassword" method="get">
                    <input type="submit" value="Change Password" />
                </form>
            </div>
        </div>
    </div>
</div>

